root = true

[*]
charset                  = utf-8
insert_final_newline     = true
trim_trailing_whitespace = true

[*.ps{1,d1}]
indent_style = space
indent_size  = 4

[*.{fs,fsx,fsi}]
fsharp_blank_lines_around_nested_multiline_expressions = false
fsharp_keep_max_number_of_blank_lines                  = 2
fsharp_max_array_or_list_number_of_items               = 5
fsharp_max_array_or_list_width                         = 80
fsharp_max_function_binding_width                      = 60
fsharp_max_if_then_else_short_width                    = 80
fsharp_max_if_then_short_width                         = 80
fsharp_max_infix_operator_expression                   = 60
fsharp_max_record_number_of_items                      = 3
fsharp_max_record_width                                = 80
fsharp_max_value_binding_width                         = 80
fsharp_multiline_bracket_style                         = aligned
fsharp_multi_line_lambda_closing_newline               = true
fsharp_newline_before_multiline_computation_expression = true
fsharp_newline_between_type_definition_and_members     = false
fsharp_space_before_member                             = true
fsharp_space_before_semicolon                          = true
fsharp_space_before_uppercase_invocation               = true
